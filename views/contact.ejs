<!DOCTYPE HTML>
<HTML>
    <HEAD>
        
    </HEAD>
    <Style>
        .div1{padding:50px; Background:skyBlue; font-family: verdana; color:#B22222; }
        .h1head{text-transform: uppercase; text-align:center}
        .form1{
            text-align:center
        }
    </Style>
    <body>
        <% include partials/nav.ejs %>
        <div class="div1">
            <h1 class="h1head">contact me</h1>
        </div>
        <form class="form1" method="post" action="/contact">
            <div class="tform">
                <div>
                    <label for="name">your name</label>
                </div>
                <div>
                    <input type="text" name="name" value = "<%= q.name %>" >
                </div>
                <div>
                    <label for="email">your E-Mail</label>
                </div>
                <div>
                    <input type="email" name="email" value = "<%= q.email %>" >
                </div>
                <div>
                    <label for="massage">your massage</label>
                </div>
                <div>
                    <textarea name="massage" rows="30" cols="100" value = "<%= q.massage %>"></textarea>
                </div>
                <div>
                    <input type="submit" value="submit">
                </div>
            </div>
        </form>
    </body>
</HTML>